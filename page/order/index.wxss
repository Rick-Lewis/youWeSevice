  flex: 1;
  text-align: right;
} */

.order-container .tab-content-container .order-card-container .footer-container {
  padding: 16rpx;
  min-height: 140rpx;
}

.order-container .tab-content-container .order-card-container .content-container cover-image {
  width: 140rpx;
}
