/* page/myZone/index.wxss */

/* 个人信息 */

.my-zone-container .info-container {
  position: relative;
  text-align: center;
  height: 302rpx;
  padding-top: 76rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(246, 248, 250, 1) 100%);
}

.my-zone-container .info-container>cover-image {
  width: 124rpx;
  height: 124rpx;
  border-radius: 124px;
  margin: 0 auto;
}

.my-zone-container .info-container .info-text-container {
  line-height: 1.5;
}

.my-zone-container .info-container .info-text-container .info-text-name-container text:first-child {
  display: inline-block;
  margin-top: 12rpx;
  font-size: 34rpx;
}

.my-zone-container .info-container .info-text-container .info-text-name-container image {
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  overflow: visible;
  margin-left: 8rpx;
}

.my-zone-container .info-container .info-text-container>text {
  display: block;
  font-size: 26rpx;
  color: #768893;
}

.my-zone-container .info-container .info-edit-container {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1.5;
  padding-top: 12rpx;
  background-color: transparent;
  width: 196rpx;
}
.my-zone-container .info-container .info-edit-container::after{
  content: none;
}

.my-zone-container .info-container .info-edit-container image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 18rpx;
}

.my-zone-container .info-container .info-edit-container text {
  font-size: 24rpx;
  color: #4598f0;
}

.my-zone-container .cell-group-container {
  margin-top: 20rpx;
}

.my-zone-container .wallet-container {
  min-height: 160rpx;
  background-color: #fff;
  display: flex;
}

.my-zone-container .wallet-container .wallet-item-container{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.my-zone-container .wallet-container .wallet-item-container view{
  text-align: center;
}

.my-zone-container .btn-container {
  margin-top: 60rpx;
}

.my-zone-container .phone-auth-container .logo-container{
  text-align: center;
}
.my-zone-container .phone-auth-container .logo-container cover-image{
  width: 144rpx;
  height: 144rpx;
  margin: 0 auto;
  margin-top: 180rpx;
  margin-bottom: 20rpx;
}
.my-zone-container .phone-auth-container .btn-container {
  margin-top: 100rpx;
}